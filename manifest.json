{
  "manifest_version": 3,
  "name": "GitHub Traffic Viewer",
  "version": "1.0",
  "description": "Displays traffic data for a GitHub repository",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://api.github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/public/icons/logo_icon_16.png",
      "32": "src/public/icons/logo_icon_32.png",
      "48": "src/public/icons/logo_icon_48.png",
      "128": "src/public/icons/logo_icon_128.png"
    }
  }
}
